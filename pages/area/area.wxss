.flex-wrp{
    height: 100%;
    display:flex;
    background-color: #FFFFFF;
    border-top:1px solid #eee;
}
.flex-item{
    width: 50%;
    height: 100%;
}
.provice{
   background: #f2f2f2;  
}
.city{
  background: #fff;
}
.item{
    height: 42px;
    line-height: 42px;
    padding-left: 20px;
}
.provice .item{border-bottom:1px solid #eee;}
.provice .item.checked{ 
    background-color: #fff;    
    position: relative;
    padding-left: 30px;
}
.provice .item.checked::after{
    background: url(../../resources/arrow.png) 0 -1px no-repeat #fff;
    background-size: contain;
    height: 5px;
    width: 9px;
    transform: rotate(-90deg);
    margin-top: -3px;
    content: "";
    position: absolute;
    left: 15px;
    top: 50%;}