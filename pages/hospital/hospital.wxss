.selarea{ height: 40px; line-height: 40px;padding-left: 10px; border-bottom: 1px solid #eee; border-top: 1px solid #eee;}
.hosli{    
    display:-webkit-box;
    position: relative;
    font-size: 14px;
    color: #909090;
    background: #fff;
    margin: 0 10px;
}
.hosimg{    
    -webkit-box-flex: 0;
    box-flex: 0;
    width: 75px;
    height: 55px;
    overflow: hidden;
    margin: 15px 10px 15px 0;
    position: relative;}
.hosimg image{width: 75px;height: 55px;border-radius: 5px;}
.hosinfo{    
    -webkit-box-flex: 1;
    box-flex: 1;
    display: box;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    border-bottom: 1px solid #f2f2f2;
    padding-top: 15px;
    padding-bottom: 15px;}
.hosinfo .hosinfoname{
    line-height: 18px;
    margin-bottom: 2px;
    word-break: break-all;color: #333;font-size: 15px;}
.hosinfo .hosinfodesc{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;max-width: 100%;}